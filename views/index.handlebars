<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<h1>Eat-Yo-Burger App</h1>
			<p></p>
		</div>
	</div>
	<!-- end .row -->
	<div class="row">
		<div class="col-sm-6">

			<h2>Available Burgers</h2>

			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}

				<li>
					<span class="burgerName"><strong>{{this.id}} - {{this.burger_name}} </strong></span>
					<form class="form-inline" id="formID" action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="devourburger btn" type="submit">Destroy It</button>
					</form>
				</li>

				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-sm-6">
			<h2>Eaten Burgers</h2>
			{{#each burgers}}
			{{#if devoured}}

			<li>
				<span class="burgerName"><strong>{{this.id}} - {{this.burger_name}} </strong></span>
				<button type="button" class="trashburger btn" id="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
					 class="trash"></span>Trash it</button>
			</li>

			{{/if}}
			{{/each}}

		</div>
	</div>
	<!-- end .row -->
	<div class="row">
		<div class="center col-sm-12">
			<form class="create-update-form" action="/" method="POST">
				<div class="form-group">
					<p class="instructions">Enter a burger you want to order and click the Submit Order button.</p>
					<input type="search" id="ca" name="burger_name" placeholder="Your order...">
				</div>
				<button class="submitburger btn" type="submit">Submit Order</button>
			</form>
		</div>
	</div>
</div>
